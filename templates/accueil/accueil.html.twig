{# accueil/accueil.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
{% if seen|length > 0 %}
   <section id="row1">
      <h1 class="sectionTitle">Film Ã  revoir <i class="fa fa-clock-o"></i></h1>
      <div id="mySidenav" class="sidenav">
         <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
         <a href="#">Movie 1</a>

      </div>

      <div class="examples">
         <ul class="img-list">
            {% for movie in seen %}
            <li class="image">
               <a href="/movie/{{ movie.idMovie.id }}">
                  <img src={{movie.idMovie.img is same as(null) ? "https://via.placeholder.com/280x150":movie.idMovie.img}} width="280" height="150" />
                  <span class="text-content"><span>{{movie.idMovie.title is same as(null) ?"": movie.idMovie.title}}<br><br><i class="fa fa-4x  fa-play-circle-o"></i><br><br><i class="fa fa-chevron-down" aria-hidden="true"></i></span></span>
               </a>
            </li>
         {% endfor %}

         </ul>

      </div>

   </section>
   {% endif %}

{% if favorites|length > 0 %}
   <section id="row2">
      <h1 class="sectionTitle">Favoris <i class="fa fa-star"></i></h1>
      <div class="examples">
         <ul class="img-list">
         {% for movie in favorites %}
            <li class="image">
               <a href="/movie/{{ movie.idMovie.id }}">
                  <img src={{movie.idMovie.img is same as(null) ? "https://via.placeholder.com/280x150":movie.idMovie.img}} width="280" height="150" />
                  <span class="text-content"><span>{{movie.idMovie.title is same as(null) ?"": movie.idMovie.title}}<br><br><i class="fa fa-4x  fa-play-circle-o"></i><br><br><i class="fa fa-chevron-down" aria-hidden="true"></i></span></span>
               </a>
            </li>
         {% endfor %}
         </ul>
      </div>
   </section>
{% endif %}

{% for genre in genres %}
   {% if genre.categorize|length > 0 %}
   <section id="row2">
      <h1 class="sectionTitle">{{genre.name}}</h1>
      <div class="examples">
         <ul class="img-list">
         {% for movie in genre.categorize %}
            <li class="image">
               <a href="/movie/{{ movie.idMovie.id }}">
                  <img src={{movie.idMovie.img is same as(null) ? "https://via.placeholder.com/280x150":movie.idMovie.img}} width="280" height="150" />
                  <span class="text-content"><span>{{movie.idMovie.title is same as(null) ?"": movie.idMovie.title}}<br><br><i class="fa fa-4x  fa-play-circle-o"></i><br><br><i class="fa fa-chevron-down" aria-hidden="true"></i></span></span>
               </a>
            </li>
         {% endfor %}
         </ul>
      </div>
   </section>
{% endif %}
{% endfor %}
</div>
{% endblock %}
