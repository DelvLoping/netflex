{% extends 'base.html.twig' %}

{% block title %}Categorize index{% endblock %}

{% block body %}
    <h1>Categorize index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Film</th>
                <th>Genre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorize in categorizes %}
            <tr>
                <td>{{ categorize.id }}</td>
                <td>{{ categorize.idMovie }}</td>
                <td>{{ categorize.idGenre }}</td>
                <td>
                    <a href="{{ path('app_categorize_show', {'id': categorize.id}) }}">show</a>
                    <a href="{{ path('app_categorize_edit', {'id': categorize.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_categorize_new') }}">Create new</a>
{% endblock %}
